<resources>

    <declare-styleable name="TagView">
        <attr name="tag_distance" format="dimension"/>
        <attr name="tag_height" format="dimension"/>
        <attr name="tag_backgroundColor" format="color"/>
        <attr name="tag_text" format="string"/>
        <attr name="tag_textSize" format="dimension"/>
        <attr name="tag_textColor" format="color"/>
        <attr name="tag_alpha" format="integer"/>
        <attr name="tag_visible" format="boolean"/>
        <attr name="tag_orientation" format="enum">
            <enum name="LEFT_TOP" value="1"/>
            <enum name="RIGHT_TOP" value="2"/>
            <enum name="LEFT_BOTTOM" value="3"/>
            <enum name="RIGHT_BOTTOM" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ArrowView">
        <attr name="arrow_color" format="color"/>
    </declare-styleable>

</resources>


